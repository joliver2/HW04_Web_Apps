<h1>Sections</h1>

<table>
  <%= form_tag sections_path, :method => "get" do  %>
    <%= label_tag(:name, "Search for a Year:") %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag("Search", :name => nil) %>
  <% end %>
  <thead>
    <tr>
      <th>Course</th>
      <th>Professor</th>
      <th>Year</th>
      <th>Semester</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.course.number %></td>
        <td><%= section.professor.name %></td>
        <td><%= section.year %></td>
        <td><%= section.semester.semester%></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Section', new_section_path %>
