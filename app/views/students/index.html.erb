<header class='clearfix'>
  <div class="left-nav">
    <ul>
      <li><%= link_to "Students", students_path %></li>
    </ul>
  </div>
  <div class="right-nav">
    <ul>
      <li><%= link_to "Courses", courses_path %></li>
    </ul>
    <div class="right-nav">
      <ul>
        <li><%= link_to "Professors", professors_path %></li>
      </ul>
      <div class="right-nav">
        <ul>
          <li><%= link_to "Departments", departments_path %></li>
        </ul>
        <div class="right-nav">
          <ul>
            <li><%= link_to "Sections", sections_path %></li>
          </ul>
          <div class="right-nav">
            <ul>
              <li><%= link_to "Semesters", semesters_path %></li>
            </ul>

            </div>
</header>
<h1>Students</h1>

<table>
  <%= form_tag students_path, :method => "get" do  %>
    <%= label_tag(:name, "Search for a Student: ") %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag("Search", :name => nil) %>
  <% end %>
  <thead>
    <tr>
      <th>Name</th>
      <th>Student Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.identifier %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path %>
<%= link_to 'Log Out', destroy_user_session_path, method: :delete %>
